{
  "name": "vardot/varbase-build",
  "description": "Drupal Bundled with Necessities | by Vardot projects with composer",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Vardot",
      "role": "Development"
    }
  ],
  "repositories": [
      {
          "type": "composer",
          "url": "https://packages.drupal.org/8"
      }
  ],
  "require-dev": {
    "drupal/drupal-extension": "^3.2",
    "drupal-composer/drupal-scaffold": "^2.0.0",
    "jakoch/phantomjs-installer": "1.9.8",
    "behat/behat": "^3.0",
    "drupal/coder": "8.*",
    "phing/phing": "^2.14",
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "behat/mink-zombie-driver": "@stable",
    "behat/mink-selenium2-driver":  "~1.3",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "guzzlehttp/guzzle": "6.2.*@stable",
    "symfony/css-selector": "~2.8",
    "squizlabs/php_codesniffer": "2.*",
    "behatch/contexts": "*",
    "emuse/behat-html-formatter": "@stable"
  },
  "require": {
    "composer/installers": "^1.0.20",
    "drupal-composer/drupal-scaffold": "^2.0.1",
    "cweagans/composer-patches": "^1.5.0",
    "drush/drush": "^9.0",
    "drupal/console": "~1.0",
    "drupal/varbase": "4.0-beta9",
    "mkalkbrenner/php-htmldiff-advanced": "~0.0.8"
  },
  "config": {
      "bin-dir": "bin/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
    "autoload": {
      "classmap": [
        "scripts/Procedures.php"
      ]
  },
  "scripts": {
    "post-install-cmd": ["DrupalComposer\\DrupalScaffold\\Plugin::scaffold", "Vardot\\Varbase\\Procedures::postInstallProcedure"],
    "post-update-cmd": ["DrupalComposer\\DrupalScaffold\\Plugin::scaffold", "Vardot\\Varbase\\Procedures::postUpdateProcedure"]
  },
  "extra": {
    "installer-paths": {
      "docroot/core": ["drupal/core"],
      "docroot/modules/contrib/{$name}": ["type:drupal-module"],
      "docroot/profiles/{$name}": ["type:drupal-profile"],
      "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/{$name}": ["type:drupal-drush"]
    },
    "enable-patching": true
  }
}
